<div class="d-flex align-items-center modal-input-grow">
  <%= f.input :name, wrapper_html: { class: 'width-input'}, placeholder: "Tulips" %>
  <%= f.input :category, collection: Product::CATEGORIES, selected: 1, wrapper_html: { class: 'width-input mx-2'} %>
  <%= f.hidden_field :_destroy %>


  <%= remove_association(tag: :div) do %>
    <i class="fas fa-trash"></i>
  <% end %>
</div>


