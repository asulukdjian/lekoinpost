
<div class="container">
  <!-- <div class="flex-container"> -->
    <div class="row pt-5 justify-content-between">
      <div class="col-4">
        <div class="card-garden">
          <%= image_tag 'gaston.jpg', class: "avatar-card rounded-circle" %>
          <div class="card-garden-owner"><p><strong>Garden owner : </strong><%= @garden.user.full_name %> </p></div>
          <div class="card-garden-address"><p><%= "Address: " %><%= @garden.address %></p></div>
          <div class="card-garden-description"><p><%= "Description: " %><%= @garden.description %></p></div>
        </div>
      </div>
      <div class="col-4">
        <div>
          <div class="card-garden-buttons">
            <div class="give-button"><%= link_to "Give your waste", new_garden_appointment_path(@garden), class: "btn btn-primary" %></div>
          </div>
          <div id="map" class="card-garden-map" style="height: 250px; width: 400px"
                data-markers="<%= @markers.to_json %>"
                data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
            <div class="back-garden-button"><%= link_to "back to gardens", gardens_path, class: "btn btn-info", id: "btn-back" %></div>
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-6">
        <div class="card-carousel"><%= render 'shared/carousel.html.erb' %></div>
      </div>
    </div>
  <!-- </div> -->
</div>

