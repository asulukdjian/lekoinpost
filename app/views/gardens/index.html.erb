<div class="container mb-5">
  <div class="row justify-content-center">
      <%= render 'shared/search_bar_address_geocoded' %>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <div class="d-flex justify-content-between flex-wrap">
      <% @gardens.each do |garden| %>
        <div class="card-product">
          <%= image_tag "https://images.unsplash.com/photo-1572085313466-6710de8d7ba3?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=675&q=80", alt: "garden-photo" %>
          <div class="card-product-infos">
            <h2><%= garden.name %></h2>
            <p><%= link_to garden.address, garden_path(garden) %></p>
            <p>John Do
            📍1,3 km</p>
          </div>
        </div>
      <% end %>
      </div>
    </div>
    <div class="col-4">
      <div id="map-index"
        data-markers="<%#= @markers.to_json %>"
        data-mapbox-api-key="<%#= ENV['MAPBOX_API_KEY'] %>">
        Map
      </div>
    </div>
 </div>
</div>
