<div class="container mb-5 mt-4">
  <div class="row justify-content-center">
      <%= render 'shared/search_bar_address_geocoded' %>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <div class="d-flex justify-content-between flex-wrap">
      <% @gardens.each do |garden| %>
        <div class="card-product">
          <%= image_tag "https://images.unsplash.com/photo-1572085313466-6710de8d7ba3?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=675&q=80", alt: "garden-photo" %>
          <div class="card-product-infos">
            <h2><%= link_to garden.name, garden_path(garden) %></h2>
            <p><%= garden.address%></p>
            <p>John Do
            üìç1,3 km</p>
          </div>
        </div>
      <% end %>
      </div>
    </div>

    <div class="col-4">
      <div id="map"
        style="width: 100%; height: 658px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
